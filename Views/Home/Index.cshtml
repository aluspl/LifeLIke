@using LifeLike.ViewModel
@using LifeLike.Utils
@model LifeLIke.Controllers.PageConfigModel
@{
    ViewData["Title"] = "LifeLike";
}
<div class="row">
    <div class="col-md-9">
        
        <h1>LifeLike</h1>

        @Html.Raw(HtmlUtils.GenerateYoutube(new LinkViewModel
        {
            Link = @Model.WelcomeVideo
        }))

        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <h3>Kawowi Podróżnicy's Blog</h3>
                        @await Component.InvokeAsync("Rss", new {Url = @Model.Rss1Url, Top = 1})
                    </div>
                    <div class="col-md-6">
                        <h3>Szymon Motyka's Blog</h3>
                        @await Component.InvokeAsync("Rss", new {Url = @Model.Rss2Url, Top = 1})
                    </div>
                </div>
            </div>
        </div>
    </div>
  
    <div class="col-md-3">
        @await Component.InvokeAsync("Sidebar")
    </div>           
    
    
</div>
