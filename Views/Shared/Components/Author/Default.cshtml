@model LifeLike.ViewModel.SidebarViewModel

<div class="row">
    <div class="col-md-4">
        <h4 class="media-heading">Szymon Motyka</h4>
            <div class="media">
                <div class="media-body">
                    <img src="https://avatars0.githubusercontent.com/u/1876578?v=3&s=240" alt="Szymon Motyka">
                </div>
            </div>
    </div>
    <div class="col-md-8">
        <h4 class="media-heading">Useful Link</h4>
        @if (Model != null && Model.Links.Any())
        {
            <div class="btn-group" role="group" aria-label="...">
                @foreach (var item in Model.Links)
                {
                    <a href="@item.Link" class="btn btn-default"> <span class="glyphicon glyphicon-@item.IconName" aria-hidden="true"> </span> @item.Name</a>
                }
            </div>
        }
    </div>  
</div>