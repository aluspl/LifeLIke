@using LifeLike.Utils
@model LifeLike.ViewModel.PageViewModel

@{
    ViewBag.Title = "Update POST";
    Layout = "_Layout";
}

<h2>Update POST</h2>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model=>model.Id)

    <div class="form-group">
        <label>Name</label>
        @Html.EditorFor(model=>model.ShortName)
    </div>
    
    <div class="form-group">
        <label>Full Name</label>
        @Html.EditorFor(model=>model.FullName)
    </div>
    
    <div class="form-group">    
        <label>Page Category</label>
        @Html.TextAreaFor(model => model.Content)
    </div>
    
    <div class="form-group">    
        <label>Page Category</label>
        @Html.DropDownListFor(model => model.Category, HtmlUtils.PageCategoryList)
    </div>
    
    
   
    <div class="form-group">
        <label>Order</label>
        @Html.EditorFor(model=>model.PageOrder)
    </div>
  
  
    <button type="submit" class="btn btn-primary">Submit</button>
}