@model LifeLike.ViewModel.UploadFileViewModel

@{
    ViewBag.Title = $"Add Photos to: {Model.GalleryTitle}";
    Layout = "_Layout";
}
<div class="row">
    <section>
        @using (Html.BeginForm("UploadFiles", "Photo", FormMethod.Post, new
        {enctype = "multipart/form-data"}))
        {
            @Html.HiddenFor(Model=>Model.GalleryId);
            <div class="form-group">
                <label class="control-label">Photo Title: </label>
                @Html.EditorFor(m => m.Title)
            </div>
            <div class="form-group">
                <label class="control-label">Upload Photo: </label>
                @Html.TextBoxFor(m => m.Photo, new {type = "file"})
            </div>
            <div class="form-group">
                    <input type="submit" value="Upload" class="btn btn-success"/>
            </div>
        }      
    </section>
</div>